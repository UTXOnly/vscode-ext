{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cassandra Integration Configuration",
  "type": "object",
  "properties": {
    "instances": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cassandra_aliasing": {
            "type": "boolean",
            "default": true,
            "description": "Must be set to true to comply with CASSANDRA-4009.\nLearn more: https://issues.apache.org/jira/browse/CASSANDRA-4009"
          }
        },
        "required": [
          "cassandra_aliasing"
        ]
      },
      "description": "Integration instances configuration"
    },
    "logs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Log type (file, tcp, udp, etc.)"
          },
          "path": {
            "type": "string",
            "description": "Path to log file"
          },
          "source": {
            "type": "string",
            "description": "Log source identifier"
          }
        }
      },
      "description": "Log collection configuration"
    }
  },
  "required": [
    "instances"
  ],
  "additionalProperties": false
}